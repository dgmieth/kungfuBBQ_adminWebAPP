    <style>
        * {
            margin:0px;
            padding:0px;
            box-sizing:border-box;
            font-family:sans-serif;
          }
           
          #sidebar-wrapper {
            position:absolute;
            top:10%;
            left:-200px;
            width:200px;
            height:92%;
            background:#212529;
            transition: all 300ms linear;
            z-index: 10;
          }
          #sidebar-wrapper.active {
            left:0px;
          }
          #sidebar-wrapper .toggle-btn {
            position:absolute;
            left:220px;
            top:10px;
            transition: display 1s;
          }
          #sidebar-wrapper .toggle-btn span {
            display:block;
            width:30px;
            height:5px;
            background:#212529;
            margin:5px 0px;
            cursor:pointer;
          }
          #sidebar-wrapper div.list div.item, button.item {
            padding:15px 10px;
            border-bottom:1px solid #444;
            color:#fcfcfc;
            text-transform:uppercase;
            font-size:15px;
          }
          #sidebar-wrapper div.list button.item {
            background-color: transparent;
            border: none;
            border-bottom: 1px solid #444;
            width: 100%;    
          }
          #sidebar-wrapper div.list button.item:hover{
              font-style: italic;
          }
          #sidebar-wrapper div.list button.item.active{
              font-size:18px;
              font-weight: 900;
          }
          /*sidebar-wrapper-options*/
          #sidebar-wrapper-options {
            position:absolute;
            top:10%;
            left:-200px;
            width:200px;
            height:92%;
            background:#999999;
            transition:all 300ms linear;
          }
          #sidebar-wrapper-options.active {
            left:0px;
          }
          #sidebar-wrapper-options .toggle-btn {
            position:absolute;
            left:265px;
            top:10px;
            transition: left 1s;
          }
          #sidebar-wrapper-options.active .toggle-btn {
            left:220px;
            transition: left 1s;
          }
          #sidebar-wrapper-options .toggle-btn p {
              margin: 0;
              padding: 0;
              font-size: .9rem;
              cursor: pointer;
          }
          #sidebar-wrapper-options .toggle-btn span {
            display:block;
            width:50px;
            height:2px;
            background:#999999;
            margin:5px 0px;
            cursor:pointer;
          }
          #sidebar-wrapper-options div.list div.item, button.item {
            padding:15px 10px;
            border-bottom:1px solid #444;
            color:#fcfcfc;
            text-transform:uppercase;
            font-size:15px;
          }
          #sidebar-wrapper-options div.list button.item {
            background-color: transparent;
            border: none;
            border-bottom: 1px solid #444;
            width: 100%;    
          }
          #sidebar-wrapper-options div.list button.item:hover{
            font-style: italic;
          }
          #sidebar-wrapper-options div.list button.item.active{
              font-size:18px;
              font-weight: 900;
          }
          .viewCounter {
              border-radius: 50%;
              width: 50px;
              height: 30px;
              /*padding: 8px;*/

              background: #fff;
              border: 2px solid #666!important;
              color: #666;
              text-align: center;

              font: 17px Arial, sans-serif;
          }
          .mealsForThis{
            border: 2px solid #518ce4!important;
            color: #518ce4;
          }
          .mealsConfirmed{
            border: 2px solid #39b66d!important;
            color: #39b66d;
          }
          .mealsOnList{
            border: 2px solid #403df1!important;
            color: #403df1;
          }

    </style>
